{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "moduleResolution": "node",
    "types": [
      "jasmine",
      "node",
      "webpack"
    ],
    "lib": ["es2015", "dom"]
  },
  "files": [
    "ng2-bootstrap.ts"
  ],
  "exclude": [
    "node_modules", "bundles", "dist"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  },
  "atom": { "rewriteTsconfig": false }
}
