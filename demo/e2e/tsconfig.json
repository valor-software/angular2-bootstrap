{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist",

    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "es7"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "sourceMap": true,
    "inlineSources": true,

    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "../../node_modules"
  ]
}
