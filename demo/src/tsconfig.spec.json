{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceType": "module",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
      "ngx-bootstrap*": ["../../src"]
    },
    "types": ["jasmine", "webpack"],
    "lib": ["es2016", "dom"]
  },
  "exclude": [
    "../node_modules"
  ]
}
